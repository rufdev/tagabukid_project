        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
        <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="90,35,0,0" VerticalAlignment="Top" Width="75"/>
